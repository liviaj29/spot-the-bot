<div class="text-message-container">
  <h2>Message:</h2>
  <p><%= simple_format(@question.body) %></p>
  <form action="<%= answer_quiz_path(@quiz, category: 'text', index: @index) %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" name="answer" value="true" class="btn btn-danger">Phishing</button>
    <button type="submit" name="answer" value="false" class="btn btn-success">Safe</button>
  </form>
</div>
